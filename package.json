{
  "name": "build-nsl",
  "version": "0.15.0",
  "description": "Atom Build provider for nsL Assembler, transpiles nsL code into NSIS scripts",
  "repository": "https://github.com/idleberg/atom-build-nsl",
  "license": "MIT OR GPL-2.0",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode none --watch",
    "lint": "eslint ./src",
    "test": "npm run lint"
  },
  "keywords": [
    "buildprovider",
    "compile",
    "nsis",
    "nsl assembler",
    "windows",
    "installer"
  ],
  "main": "lib/provider.js",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationHooks": [
    "language-nsl:grammar-used"
  ],
  "providedServices": {
    "builder": {
      "description": "Compiles nsL scripts",
      "versions": {
        "2.0.0": "provideBuilder"
      }
    }
  },
  "package-deps": [
    "build"
  ],
  "dependencies": {
    "atom-package-deps": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "eslint": "^6.0.0",
    "eslint-config-atom-build": "^4.0.0",
    "husky": "^2.4.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
